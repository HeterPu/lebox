<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E7EAEF" />

        <RadioGroup
            android:id="@+id/tab_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tab_find"
                style="@style/tabButtonStyle"
                android:drawableTop="@drawable/tab_find"
                android:text="发现" />

            <RadioButton
                android:id="@+id/tab_game"
                style="@style/tabButtonStyle"
                android:drawableTop="@drawable/tab_game"
                android:text="首页" />

            <RadioButton
                android:id="@+id/tab_rank"
                style="@style/tabButtonStyle"
                android:drawableTop="@drawable/tab_rank"
                android:text="榜单" />

            <RadioButton
                android:id="@+id/tab_challenge"
                style="@style/tabButtonStyle"
                android:drawableTop="@drawable/tab_challenge"
                android:text="竞技场"
                />

            <RadioButton
                android:id="@+id/tab_category"
                style="@style/tabButtonStyle"
                android:drawableTop="@drawable/tab_category"
                android:text="分类" />
            <RadioButton
                android:id="@+id/tab_me"
                style="@style/tabButtonStyle"
                android:drawableTop="@drawable/tab_me"
                android:text="我的" />


        </RadioGroup>
    </LinearLayout>
</LinearLayout>
